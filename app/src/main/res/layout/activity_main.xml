<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewRock"
        android:layout_width="93dp"
        android:layout_height="71dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:onClick="pickRock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rock" />


    <ImageView
        android:id="@+id/imageViewPaper"
        android:layout_width="93dp"
        android:layout_height="71dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="24dp"
        android:onClick="pickPaper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paper" />

    <ImageView
        android:id="@+id/imageViewScissors"
        android:layout_width="93dp"
        android:layout_height="71dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="28dp"
        android:onClick="pickScissors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/scissors" />

    <ImageView
        android:id="@+id/imageViewYourMove"
        android:layout_width="141dp"
        android:layout_height="132dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="180dp"
        android:onClick="pickScissors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/none" />

    <ImageView
        android:id="@+id/imageViewOpponentMove"
        android:layout_width="141dp"
        android:layout_height="132dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="180dp"
        android:onClick="pickScissors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/none" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="324dp"
        android:text="@string/your_move"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="324dp"
        android:text="@string/opponent_move"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="8dp"
        android:text="Win/Draw/Lose"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>






